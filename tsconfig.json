{
  "compileOnSave": true,
  "compilerOptions": {
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "newLine": "LF",
    "forceConsistentCasingInFileNames": true,
    "target": "es2015",
    "module": "commonjs",
    "lib": ["es2015"],
    "declaration": true,
    "outDir": "./lib",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
