{
    "compileOnSave": true,
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2015",
        "lib": [
            "es2015"
        ],
        "declaration": true,
        "outDir": "./lib",
        "removeComments": true,
        "downlevelIteration": true,
        "strict": true,
        "newLine": "LF",
        "module": "commonjs",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types",
            "typings.d.ts"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "src/benchmarks",
        "src/mockdata",
        "src/tests"
    ]
}